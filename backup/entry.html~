<!doctype html>
<html>
  <head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  </head>
  <body bgcolor="black" style='color:green'>
	<script>
	  var line=[];
	  var inputstr="";
	  var canwrite=true;
	  line[0]="<p>⟩⟩⟩ <span style='color:white'>Welcome to text-only counterstrike.</span></p>"
	  line[1]="<p>⟩⟩⟩ <span style='color:white'>You are in a dark outdoor map--</span></p>"
	  line[2]="<p>⟩⟩⟩ <span id='userinput' style='color:white'></span></p>"
	  line[3]="<p>⟩⟩⟩ <span style='color:white'>You have been pwned by a grue.</span></p>"
	  line[4]="<p>⟩⟩⟩ <span style='color:white'>Game Over. You suck.</span></p>"
	  line[5]="<p>⟩⟩⟩ <span style='color:white'>Too late. You have been pwned by a grue.</span></p>"
	  document.body.innerHTML+=line[0];
	  setTimeout(function(){
		document.body.innerHTML+=line[1];
		inputstr="";
		document.body.innerHTML+=line[2];
	  },2000); 
	  setTimeout(function(){
		canwrite=false;
		if (inputstr==""){
		  document.body.innerHTML+=line[3];
		}else{
		  document.body.innerHTML+=line[5];
		}
	  },8000); 
	  setTimeout(function(){
		document.body.innerHTML+=line[4];
	  },10000); 
	  document.onkeyup=function(e){
		var input = String.fromCharCode(e.which)
		if (e.keyCode==9){
		  inputstr=inputstr.slice(0,inputstr.length-1);
		}else{
		  inputstr+=input;
		}
		if (canwrite){
		  document.getElementById("userinput").innerHTML=inputstr;
		}
	  }
	</script>
  </body>
</html>
