puts "Enter author names (First Last or First MI Last) here. Enter '.' when done."
names=[]
while (input=gets.chomp()) != "."
    parts=input.split()
    if parts.length==3
        First=parts[0][0].upcase()+parts[1][0].upcase()
        Last=parts[2]
    else
        First=parts[0][0].upcase()
        Last=parts[1]
    end
    names.push([First,Last])
end

print "Enter year of publication:"
Year=gets.chomp()
print "Enter Article Title:"
Title=gets.chomp()
print "Enter Journal Title here:"
JournalTitle=gets.chomp()
print "Enter volume number here:"
VolumeNum=gets.chomp()
print "Enter page number here:"
PageNum=gets.chomp()

out = ""
names.each do |n|
    out+="#{n[1]} #{n[0]}, "
end
out=out.slice(0,out.length-2)
out += ". #{Year}. #{Title}. <i>#{JournalTitle}</i>. #{VolumeNum}:#{PageNum}."
puts out
