		\item
			\begin{enumerate}
				\item
					$z_1=\frac{1}{2}+i\sqrt{2}$\\
					$z_2=e^{-i\pi/3}=\frac{1}{2}-\frac{\sqrt{3}}{2}i$\\
					$z_1^*=\frac{1}{2}-i\sqrt{2}$\\
					$z_2^*=e^{i\pi/3}=\frac{1}{2}+\frac{\sqrt{3}}{2}i$\\
					$\frac{1}{z_1}=\frac{1}{\frac{1}{2}+i\sqrt{2}}\times\frac{\frac{1}{2}-i\sqrt{2}}{\frac{1}{2}-i\sqrt{2}}=\frac{2}{9}-\frac{4}{9}\sqrt{2}i$\\
					$\frac{1}{z_2}=e^{i\pi/3}=\frac{1}{2}+\frac{\sqrt{3}}{2}i$\\
					$\frac{1}{z_1^*}=\frac{1}{\frac{1}{2}-i\sqrt{2}}\times\frac{\frac{1}{2}+i\sqrt{2}}{\frac{1}{2}+i\sqrt{2}}=\frac{2}{9}+\frac{4}{9}\sqrt{2}i$\\
					$\frac{1}{z_2^*}=e^{-i\pi/3}=\frac{1}{2}-\frac{\sqrt{3}}{2}i$\\
				\item
					$(\frac{1}{2} + \sqrt{2}i)^2+e^{\frac{-i\pi}{3}}$\\
					$=\frac{1}{4} + \sqrt{2}i-2+\frac{1}{2}-\frac{\sqrt{3}}{2}i$\\
					$=\boxed{\frac{-5}{4}+\frac{2\sqrt{2}-\sqrt{3}}{2}i}$\\

					$\frac{1}{3}(\frac{1}{2}+\sqrt{2}i)+e^{\frac{i\pi}{3}}$\\
					$=\frac{1}{6}+\frac{\sqrt{2}}{3}i+\frac{1}{2}+\frac{\sqrt{3}}{2}i$\\
					$=\boxed{\frac{2}{3}+\frac{2\sqrt{2}+3\sqrt{3}}{6}i}$\\
				\item
					$|z_1|=|\frac{1}{2}+i\sqrt{2}|=\sqrt{\frac{1}{2}^2+\sqrt{2}^2}=\sqrt{\frac{9}{4}}=\boxed{\frac{3}{2}}$\\
					$|z_1^*|=|\frac{1}{2}-i\sqrt{2}|=\sqrt{\frac{1}{2}^2+(-\sqrt{2})^2}=\sqrt{\frac{9}{4}}=\boxed{\frac{3}{2}}$\\
					The answer does not change.
				\item
					$|R_1e^{\theta_1i}R_2e^{\theta_2i}|=|R_1R_2e^{(\theta_1+\theta_2)i}|=R_1R_2$\\
					$\implies |AB|=|A||B|$\\
					$\implies |z_1z_2|=|z_1||z_2|=\frac{3}{2}\times1=\boxed{\frac{3}{2}}$\\
					$\implies |z_1z_2|=|z_1||z_2^*|=\frac{3}{2}\times1=\boxed{\frac{3}{2}}$\\
				\item
					$(e^{-\frac{\pi}{3}i})^{\frac{1}{4}}=e^{(-\frac{\pi}{12}+\frac{2\pi k}{4})i}, k=0,1,2,3$\\
					$(e^{-\frac{\pi}{3}i})^{\frac{1}{4}}=\boxed{e^{-\frac{\pi}{12}i},e^{-\frac{5\pi}{12}i},e^{-\frac{11\pi}{12}i},e^{-\frac{17\pi}{12}i}}$
			\end{enumerate}
