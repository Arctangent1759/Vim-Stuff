		\item 
			\begin{enumerate}
				\item
					Let $System(x_1(t))=y_1(t)=a_1x_1(t-\tau_1)+a_2x_1(t-\tau_2)$\\
					Let $System(x_2(t))=y_2(t)=a_1x_2(t-\tau_1)+a_2x_2(t-\tau_2)$\\
					Let $System(x(t))=System(c_1x_1(t)+c_2x_2(t))$\\
					$=a_1(c_1x_1(t-\tau_1)+c_2x_2(t-\tau_1))+a_2(c_1x_1(t-\tau_2)+c_2x_2(t-\tau_2))$\\
					$=a_1c_1x_1(t-\tau_1)+a_1c_2x_2(t-\tau_1)+a_2c_1x_1(t-\tau_2)+a_2c_2x_2(t-\tau_2)$\\
					$=c_1(a_1x_1(t-\tau_1)+a_2x_1(t-\tau_2))+c_2(a_1x_2(t-\tau_1)+a_2x_2(t-\tau_2))$\\
					$=c_1y_1(t)+c_2y_2(t)$\\
					$\implies$ the system is linear.
				\item
					$\tau_1=(1000m)/(3\times10^8m/s)=3.33\times10^-6$\\
					$\tau_2=(3000m)/(3\times10^8m/s)=1.00\times10^-5$\\
					$x(t)=A\sin((2\pi)(1.5\times10^9)t)$\\
					$y(t)=a_1x_1(t-\tau_1)+a_2x(t-\tau_2)$\\
					$y(t)=(10^{-9})\sin((2\pi)(1.5\times10^9)(t-3.33\times10^-6))+(0.5\times10^-9)\sin((2\pi)(1.5\times10^9)(t-1.00\times10^{-5}))$\\
					Period = $1/(1.5\times 10^9)=6.67\times10^{-10}$\\
					$y(t)=(10^{-9})\sin((2\pi)(1.5\times10^9)(t))+(0.5\times10^-9)\sin((2\pi)(1.5\times10^9)(t-6.67\times10^{-6}))$\\
					$6.67\times10^{-6}$ is divisible by the period $1/(1.5\times 10^9)=6.67^{-10}$\\
					$\implies$ the signals are in phase, so the amplitudes add.\\
					$\boxed{y(t)=(10.5\times10^9)\sin((2\pi)(1.5\times10^9)(t))}$, $t>10^{-5}$s\\
					The signal is a sinusoid.
					$ $\\
					$ $\\
					$ $\\
					$ $\\
					$ $\\
				\item
					Period p = $1/(1.5\times 10^9)=6.67\times10^{-10}$\\
					The signals must be out of phase by $\frac{p}{2}=3.33\times10^{-10}$\\
					$\tau_2=1.00\times10^{-5}+3.33\times10^{-10}=1.0000333\times10^{-5}$\\
					$\tau_2\times c=(1.0000333\times10^{-5})\times(3\times10^8m/s)=3000.0999=2d-1000$\\
					$\boxed{d=2000.1m}$\\
					$ $\\
					$ $\\
					$ $\\
					$ $\\
				\item
					For better reception, move forwards or backwards several meters.
			\end{enumerate}
			\newpage
		\item
			\begin{enumerate}
				\item
					$f_0=100s^{-1}$\\
					$v=100km/h=100*10/36m/s=27.8m/s$\\
					$d=100m$\\
					$y(t)=\sin(2\pi f(t - \phi))$\\
					$\phi = \frac{d}{c}=\frac{100m}{340m/s}=.294s$\\
					$f=\frac{c}{c-v}f_0=\frac{340m/s}{340m/s-27.8m/s}(100s^{-1})=109s^{-1}$\\
					$\boxed{y(t)=\sin(2\pi (109)(t - (.294)))}$\\
					y(t)  is a sinusoid of frequency $f=109Hz$.\\
					Transmitted:\\
					$ $\\
					$ $\\
					$ $\\
					$ $\\
					$ $\\
					Recieved:\\
					$ $\\
					$ $\\
					$ $\\
					$ $\\
					$ $\\
				\item
					$y_1(t)=x_1(f'(t-\phi))$\\
					$y_2(t)=x_2(f'(t-\phi))$\\
					$x(t)=c_1x_1(t)+c_2x_2(t)$\\
					$y(t)=x(f'(t-\phi))=c_1x_1(f'(t-\phi))+c_2x_2(f'(t-\phi))$\\
					$=c_1y_1(t)+c_2y_2(t)$
					$\implies$ the system is linear.
				\item
					$y(t)=\sin(2\pi f(t-\phi))$
					$\phi = \frac{d}{c}=\frac{100m}{340m/s}=.294s$\\
					$f=\frac{c}{c+v}f_0=\frac{340m/s}{340m/s+27.8m/s}(100s^{-1})=92.4s^{-1}$\\
					$\boxed{y(t)=\sin(2\pi (92.4)(t - (.294)))}$\\
					y(t) is a sinusoid of frequency $\boxed{f=92.4Hz}$.
				\item
					It explains why sirens sound different as an ambulence/police car passes by. As the sound source moves closer to you, the frequency seems to increase, but the frequency abruptly decreases once the vehichle passes. The doppler effect causes sound waves to compress while the vehichle approaches, increasing frequency, and decompress while the vehichle moves away, decreasing frequency. This is confirmed by our calculations.
			\end{enumerate}
