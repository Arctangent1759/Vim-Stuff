		\item
			\begin{enumerate}
				\item
					$e^{i\theta}e^{i\phi}=(\cos(\theta)+i\sin(\theta))(\cos(\phi)+i\sin(\phi))$\\
					$=\cos(\theta)\cos(\phi)+i\cos(\theta)\sin(\phi)+i\sin(\theta)\cos(\phi)-\sin(\phi)\sin(\theta)$\\
					$=(\cos(\theta)\cos(\phi)-\sin(\phi)\sin(\theta))+(\cos(\theta)\sin(\phi)+\sin(\theta)\cos(\phi))$\\
					$=\cos(\theta+\phi)+i\sin(\theta+\phi)$
					$=\boxed{e^{i(\theta+\phi)}}$
				\item
					$\frac{e^{i\theta}+e^{-i\theta}}{2}=\frac{\cos(\theta)+i\sin(\theta)+\cos(-\theta)+i\sin(-\theta)}{2}$\\
					$=\frac{\cos(\theta)+i\sin(\theta)+\cos(\theta)-i\sin(\theta)}{2}$\\
					$=\frac{2\cos(\theta)}{2}$\\
					$=\boxed{\cos(\theta)}$\\
					$\frac{e^{i\theta}-e^{-i\theta}}{2i}=\frac{\cos(\theta)+i\sin(\theta)-\cos(-\theta)-i\sin(-\theta)}{2i}$\\
					$=\frac{\cos(\theta)+i\sin(\theta)-\cos(\theta)+i\sin(\theta)}{2i}$\\
					$=\frac{2i\sin(\theta)}{2i}$\\
					$=\boxed{\sin(\theta)}$
				\item
					$ $\\
					$ $\\
					$ $\\
