					$x(t)=A_0+\displaystyle\sum_{k=1}^{\infty}A_k\cos(k\omega_0 t)\cos(\phi_k)+A_k\sin(k\omega_0 t)\sin(\phi_k)$\\
					$x(t)=A_0+\displaystyle\sum_{k=1}^{\infty}A_k\cos(k\omega_0 t)+B_k\sin(k\omega_0 t)$\\
					$x(t)=A_0+\displaystyle\sum_{k=1}^{\infty}A_k\cos(k\omega_0 t)+B_k\sin(k\omega_0 t)$
				\item
					$x(t)=A_0+\displaystyle\sum_{k=1}^{\infty}A_k\cos(k\omega_0 t)+B_k\sin(k\omega_0 t)$\\
					$x(t)=A_0+\displaystyle\sum_{k=1}^{\infty}A_k\frac{e^{ik\omega t}+e^{-ik\omega t}}{2}+B_k\frac{e^{ik\omega t}-e^{-ik\omega t}}{2i}$\\
					$x(t)=A_0+\displaystyle\sum_{k=1}^{\infty}\frac{A_kie^{ik\omega t}+A_kie^{-ik\omega t}+B_ke^{ik\omega t}-B_ke^{-ik\omega t}}{2i}$\\
					$x(t)=A_0+\displaystyle\sum_{k=1}^{\infty}\frac{(A_ki+B_k)e^{ik\omega t}+(A_ki-B_k)e^{-ik\omega t}}{2i}$\\
					$x(t)=A_0+\displaystyle\sum_{k=1}^{\infty}\frac{(A_ki+B_k)e^{ik\omega t}+(A_ki-B_k)e^{-ik\omega t}}{2i}$\\
					$x(t)=A_0+\displaystyle\sum_{k=1}^{\infty}c_ke^{ik\omega t}+d_ke^{-ik\omega t},c_k,d_k \in \mathbb{C}$
			\end{enumerate}
