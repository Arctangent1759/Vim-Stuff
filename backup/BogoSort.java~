public class BogoSort{
  final static int TESTSIZE=12;
  final static int MAX_VAL=1000;
  public static void bogoSort(int[] arr){
    while (!isSorted(arr)){
      randomize(arr);
    }
  }
  public static boolean isSorted(int[] arr){
    for (int i = 1; i < arr.length; i++){
      if (arr[i-1]>arr[i]){
        return false;
      }
    }
    return true;
  }
  public static void randomize(int[] arr){
    int i1=(int)Math.floor(Math.random()*arr.length);
    int i2=(int)Math.floor(Math.random()*arr.length);
    int temp=arr[i1];
    arr[i1]=arr[i2];
    arr[i2]=temp;
  }
  public static void printarr(int[] arr){
    String out="[ ";
    for (int i: arr){
      out+=i+" ";
    }
    System.out.println(out+" ]");
  }
  public static void main(String[] args){
    int[] x=new int[TESTSIZE];
    for (int i=0; i<TESTSIZE; i++){
      x[i]=(int)Math.floor(Math.random()*MAX_VAL);
    }
    printarr(x);
    bogoSort(x);
    printarr(x);
  }
}
