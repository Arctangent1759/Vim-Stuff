#include "players.h"

Dealer::Dealer(string s):Player(s){}


bool Dealer::IsStillDrawing (Card c){
	return Total() <= 16;
}

Card Dealer::Upcard(){
	return myHand[0];
}

Smarter::Smarter(string s):Player(s){}

bool Smarter::IsStillDrawing (Card c){
	cout << myTotal;
	return ((myTotal<21) && (((myTotal<17 && 7<=c.Value() && c.Value()<=10) || c.IsAce()) || 
			(myTotal<12 && (2<=c.Value() && c.Value()<=6))));
}

OneMoreTaker::OneMoreTaker(string s):Player(s){
	lastIsStanding=true;
}
bool OneMoreTaker::IsStillDrawing (Card c){
	bool out = lastIsStanding;
	if (!(Total() <= 16)){
		lastIsStanding=false;
	}
	return out;

}
void OneMoreTaker::Reset(){
	lastIsStanding=true;
	Player::Reset();
}
