from random import random
import matplotlib
import pylab
from math import pi

NUMPOINTS=1000;
def calc(NUMPOINTS):
	in_circle=0;

	for _ in range(NUMPOINTS):
		point=(2*random()-1,2*random()-1)
		if (point[0]**2+point[1]**2)**.5<=1:
			in_circle+=1

	return ((float(in_circle)/float(NUMPOINTS)))*4

x=[]
y=[]

for i in range(1,NUMPOINTS+1):
	x.append(i)
	y.append(abs(pi-calc(i)));



matplotlib.pyplot.scatter(x,y)
matplotlib.pyplot.show()
