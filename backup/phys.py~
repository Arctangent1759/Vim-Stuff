p=15*10**-6
r1=.05
r2=2*r1
r3=3*r1
e=8.85418782*10**-12

def f(r):
     if r < r1:
             return r*p/(2*e)
     elif r < r2:
             return (r1**2)*p/(2*r*e)
     elif r < r3:
             return (p*r1**2+(r**2-r2**2)*p)/(2*r*e)
     else:
             return (p*r1**2+(r3**2-r2**2)*p)/(2*r*e)

