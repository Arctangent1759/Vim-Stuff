from math import log
def ie(ao, so, co,ho):
  return so*((ao+70)*(.75-co)+2.5*(ao+70)*(.25+co))

def bt(ao, so, co,ho):
  return so*((ao+100)*(1-co)+2.0*(2*ao+200)*(co))

def rk(ao, so, co,ho):
  return (so+.4)*(ho)*((1.0/log(200*(25+ao)/(ho+200*(25+ao)),.95))*(1-co)+2.0*(1.0/log(200*(25+ao)/(ho+200*(25+ao)),.95))*(co))

def test(ao,so,co,ho):
  print "DPS of the Infinity Edge for $A_0$={0}, $S_0$={1}, $C_0$={2}, $H_0$={3}: {4}".format(ao,so,co,ho,ie(ao,so,co,ho));
  print "DPS of the Bloodthirster for $A_0$={0}, $S_0$={1}, $C_0$={2}, $H_0$={3}: {4}".format(ao,so,co,ho,bt(ao,so,co,ho));
  print "DPS of the Blade of the Ruined King for $A_0$={0}, $S_0$={1}, $C_0$={2}, $H_0$={3}: {4}".format(ao,so,co,ho,rk(ao,so,co,ho)/3.3);


test(100.0,1,0,10)
