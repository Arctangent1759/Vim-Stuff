		\item
			\begin{enumerate}
				\item
					$\binom{10}{3}=\frac{10!}{(10-3)!3!}=\frac{(10)(9)(8)}{6}=\boxed{120}$
				\item
					$10^3=\boxed{1000}$
				\item
					$\binom{52}{4}=\frac{52!}{(52-4)!4!}=\frac{(52)(51)(50)(49)}{24}=\frac{(13)(17)(25)(49)}{1}=\boxed{270725}$
				\item
					$\binom{16}{4}=\frac{16!}{(16-4)!4!}=\frac{(16)(15)(14)(13)}{24}=\frac{(4)(5)(7)(13)}{1}=\boxed{1820}$
				\item
					$\binom{52}{4}-\binom{48}{4}=\frac{52!}{(52-4)!4!}-\frac{48!}{(48-4)!4!}=\frac{(52)(51)(50)(49)}{24}-\frac{(48)(47)(46)(45)}{24}=76145$
				\item
					$\binom{4}{1}\times\binom{13}{2}\times\binom{3}{1}\times\binom{13}{2}=\boxed{73008}$
				\item
					$13^4=\boxed{28561}$
				\item
					$11*4*4*4*4=\boxed{3328}$
				\item
					$\frac{7!}{3!2!}=(7)(6)(5)(2)=\boxed{420}$
				\item
					$\binom{10}{4}=\frac{10!}{(10-4)!4!}=\frac{(10)(9)(8)(7)}{24}=\boxed{210}$
				\item
					Suppose we have a box of order $n$.
					The smallest box can be in $n-1$ different boxes.
					The seconds smallest box can be in $n-2$ boxes.
					The largest and second largest box can only be in 1 boxes.
					Hence, the number of configurations is $\boxed{(n-1)!}$.
			\end{enumerate}
		\newpage
		\item
			\begin{enumerate}
				\item
					Suppose you choose $k$ cards from a collection of $n$ distinct cards.
					You choose $i$ different cards from $k$, and form one hand, $A$, with them.
					You choose $k-i$ more cards from the rest of $k$, and form another hand, $B$, with them.
					The total number of combinations comprising $A \cup B$ is $\binom{n}{i}\binom{n-i}{k-i}$.
					Now, the total number of cards in both hands, $i+k-i$, is $k$.
					The total number of cards forming the two hands, thus, must equal $\binom{k}{i}\binom{n}{k}$, or choosing $k$ cards from the $n$ in the deck, and $i$ cards out of the $k$ to comprise the first hand.
					We have, thus, that $\binom{n}{i}\binom{n-i}{k-i}=\binom{k}{i}\binom{n}{k}$.

				\item
					Suppose that you have two sets, $A$ and $B$. 
					$A$ is of length $m$ and $B$ is of length $p$.
					Suppose that you have to pick $n$ items from the combined set of $A$ and $B$.
					This is equivalent to picking some number $k$ of "$A$"s, and picking the rest $n-k$ "$B$"s (choosing $k+n-k=n$ items in total).
					But you can choose any number $0\le k\le n$ of "$A$"s.
					Hence, you have to add up all ways to pick $k$ "$A$"s and $n-k$ "$B$"s, for all $k\in [0,n]$.
					Thus, $\binom{m+p}{n}=\sum_{k=0}^m \binom{m}{k} \binom{p}{n-k}$.
			\end{enumerate}
		\newpage
		\item
			\textbf{Base Case: }\\
			$\sum_{k=0}^0 \binom{0-k}{k}=\frac{0!}{0!0!}=1=F(0)$\\
			$\sum_{k=0}^1 \binom{1-k}{k}=1=F(0)$\\
			\textbf{Inductive Hypothesis: }\\
			Assume $\sum_{k=0}^i \binom{i-k}{k}=F(i), \forall i \le n$\\
			\textbf{Inductive Step: }\\
			$F(n+1)=\sum_{k=0}^{n+1} \binom{n-k+1}{k}$\\
			$=\sum_{k=0}^{n+1} \binom{n-k}{k}+\binom{n-k}{k-1}$\\
			$=\sum_{k=0}^{n+1} \binom{n-k}{k}+\sum_{k=0}^{n+1} \binom{n-k}{k-1}$\\
			$=\binom{-1}{n+1}+\sum_{k=0}^{n} \binom{n-k}{k}+\binom{-1}{n}+\binom{0}{n-1}+\sum_{k=0}^{n-1} \binom{n-k}{k-1}$\\
			$=\sum_{k=0}^{n} \binom{n-k}{k}+\sum_{k=0}^{n-1} \binom{n-k}{k-1}$\\
			$=\sum_{k=0}^{n} \binom{n-k}{k}+\binom{n}{-1}+\sum_{k=1}^{n-1} \binom{n-k}{k-1}$\\
			$=\sum_{k=0}^{n} \binom{n-k}{k}+0+\sum_{k=1}^{n-1} \binom{n-k}{k-1}$\\
			$=\sum_{k=0}^{n} \binom{n-k}{k}+\sum_{k=1}^{n-1} \binom{n-k}{k-1}+0$\\
			$=\sum_{k=0}^{n} \binom{n-k}{k}+\sum_{k=1}^{n-1} \binom{n-k}{k-1}+\binom{0}{n-1}$\\
			$=\sum_{k=0}^{n} \binom{n-k}{k}+\sum_{k=1}^{n} \binom{n-k}{k-1}$\\
			Let $k = k'+1$\\
			$=\sum_{k=0}^{n} \binom{n-k}{k}+\sum_{k'=0}^{n-1} \binom{n-k'-1}{k'}$\\
			$=\sum_{k=0}^{n} \binom{n-k}{k}+\sum_{k=0}^{n-1} \binom{n-k-1}{k}$\\
			$=F(n)+F(n-1)$\\

	\end{enumerate}
