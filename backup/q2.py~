count = int(raw_input())

if count==1:
    print 0

nodes=[]
visited=[0 for _ in range(count)]

#Grab all nodes froms stdin
for _ in range(count):
    nodes.append(int(input())-1)

reverseGraph={i:[] for i in range(count)}
for i in range(len(nodes)):
    reverseGraph[nodes[i]].append(i)

def dfs(key,root):
    if key not in reverseGraph:
        return
    for i in reverseGraph[key]:
        if i!=root:
            dfs(i,root)
    if key!=root:
        del reverseGraph[key]

keys = [i for i in reverseGraph]
for i in keys:
    dfs(i,i)

count=0
for i in reverseGraph:
    if i!=0:
        count+=1
print count
