#include <iostream>
#include <vector>
using namespace std;

void swap(int *x, int *y){
    int temp = *x;
    *x=*y;
    *y=temp;
}

void reverse(vector<int> *v){
    int length = v->size();
    for (int i = 0; i < length/2; i++){
        swap(&(*v)[i],&(*v)[length-i-1]);
    }
}

void printDiagonal(vector<vector<int> > v, int row, int col){
    int x = col;
    int y = row;
    int dimX=v.size();
    int dimY=v[0].size();
    int i = 0;
    int j = 0;
    if (x>y){
        i=x-y;
    }else{
        j=y-x;
    }
    while (i < dimX && j < dimY){
        cout << v[j][i] << endl;
        i++;
        j++;
    }
}


int main(){
    vector<int> *x = new vector<int>(5);
    (*x)[0]=5;
    (*x)[1]=4;
    (*x)[2]=3;
    (*x)[3]=2;
    (*x)[4]=1;
    for (int i = 0; i < x->size(); i++){
        cout << (*x)[i] << endl;
    }
    cout << "Reversing..." << endl;
    reverse(x);
    for (int i = 0; i < x->size(); i++){
        cout << (*x)[i] << endl;
    }

    cout << "Next" << endl;

    vector< vector<int> > y(10);
    for (int i = 0; i < y.size(); i++){
        y[i]=vector<int>(10);
        for (int j = 0; j < y[i].size(); j++){
            y[i][j]=y.size()*i+j;
        }
    }
    printDiagonal(y,1,0);
}
