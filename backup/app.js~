App = Ember.Application.create();

App.Router.map(function() {
    this.resource('post')
});

App.PostRoute = Ember.Route.extend({
    model:function(){
        console.log("asdf")
        return App.Post.create({text:'Cats are Awesome', author:'Igor'});
    }
});

App.IndexRoute = Ember.Route.extend({
    model:function(){
        console.log("ajdf")
        return App.Post.create({text:'Cats suck', author:'Not Igor'});
    }
});


App.Post=Ember.Object.extend({
    text:'',
    author:'',
    niceText:function(){
        return this.get('author')+' said: '+this.get('text');
    }.property('text','author'),
})
