		<script type="text/javascript">
			document.getElementById("myClass").addEventListener("keypress",function(e){if (e.keyCode==13){document.getElementById("button").click()}})
			document.getElementById("hideable").style.opacity=0
			document.getElementById("hidden").style.opacity=0
			myClasses=["EE40","CS170","CS188","CSH195"]
			physics=["PHYSH7A","PHYSH7B","PHYSH7C"]
			depts=["Interpretive Dance", "Knitting", "Creation Science", "Undeclared", "Horticulture", "Intelligent Censorship"]
			causes=["Berkeley squirrel population", 
			"length of Professor Shewchuck's hair",
			"number of those spinny chairs in Evans",
			"CISPA Law",
			"amount of entropy in the universe",
			"curve on the last CS70 midterm",
			"unexplained appearance of a microwave in 2b51's common room",
			"destruction of the Lampshade of Wisdom",
			"density of Regents Scholars in this class",
			"maximum occupancy of this room",
			]
			effects=[" the economy will undergo total collapse.",
			"the velociraptors will escape the lab.",
			"the end of the world is nigh.",
			"Alan Turing will return to pass judgement on all.",
			"[YOUR MAJOR HERE] is not a respectible field.",
			"IT'S A TRAP!",
			"curve will be bad.",
			"you will pull down the curve.",
			"you will pull up the curve.",
			"someone has an 80% chance of bursting into flame in the next 30 seconds.",
			"4920656e636f646520737472696e677320696e2068657820746f206d616b65206d7973656c6620736f756e6420736d617274.",
			"the class is already full.",
			"the Daleks invade next week.",
			]
			function run(){
				window.addEventListener("keypress",function(e){if (e.keyCode==13){$(".btn").click();}})
				cause=causes[Math.floor(Math.random()*causes.length)]
				effect=effects[Math.floor(Math.random()*effects.length)]
				val=(document.getElementById("myClass").value).toUpperCase();
				if (val==""){
					alert("Please enter a valid value.");
					return
				}
				for (var i = 0; i < myClasses.length; i++){
					if (val==myClasses[i]){
						document.getElementById("content").innerHTML=("<h1>Definitely not.</h1> <p>In fact, consider switching majors. I hear the Department of " + depts[Math.floor(Math.random()*depts.length)] +" is very nice this time of year.</p>");
						window.addEventListener("keypress",function(e){if (e.keyCode==8){document.location.reload()}})
						document.getElementById("hidden").style.opacity=1
						return
					}
				}
				for (var i = 0; i < physics.length; i++){
					if (val==physics[i]){
						document.getElementById("content").innerHTML=("<h1>Phase 2 it.</h1> <p><a href='https://www.facebook.com/potanii'>Brian Barch</a> said so.</p>");
						window.addEventListener("keypress",function(e){if (e.keyCode==8){document.location.reload()}})
						document.getElementById("hidden").style.opacity=1
						return
					}
				}
				if (Math.random()>.5){
					document.getElementById("content").innerHTML=("<h1>Yes.</h1><p>The "+cause+" this year indicates that "+effect+"</p><br/><br/><br/><br/><p>Also, people who recieve 'yes' responses are more likely to respond positively to web pages. There's a like button there. Just saying.</p>");
					window.addEventListener("keypress",function(e){if (e.keyCode==8){document.location.reload()}})
					document.getElementById("hideable").style.opacity=1
					document.getElementById("hidden").style.opacity=1
				}else{
					document.getElementById("content").innerHTML=("<h1>No.</h1><p>The "+cause+" this year indicates that "+effect+"</p>");
					window.addEventListener("keypress",function(e){if (e.keyCode==8){document.location.reload()}})
					document.getElementById("hidden").style.opacity=1
				}
			}

		</script>
